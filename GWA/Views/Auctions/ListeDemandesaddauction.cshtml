@model IEnumerable<GWA.Domaine.Entities.Auction>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListeDemandesaddauction</title>
  
</head>
<body>
    <center> <h2>List of users' demands to add a product</h2> </center>
    <div>@ViewData["error"]</div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuctionValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuctionTimer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndtDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.validator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProduct)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuctionValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuctionTimer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeLeft)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndtDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.validator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProduct)
            </td>
            <td>
                @Html.ActionLink("Accept demand", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Refuse demande", "Deletedemand", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
